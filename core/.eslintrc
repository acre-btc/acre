{
  "root": true,
  "extends": ["@thesis-co"],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "hardhat.config.ts",
          "deploy/**",
          "helpers/**",
          "test/**",
          "api/**",
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": ["deploy/*.ts"],
      "rules": {
        "@typescript-eslint/unbound-method": "off"
      }
    },
    {
      "files": ["*.test.ts"],
      "rules": {
        "@typescript-eslint/no-unused-expressions": "off",
        "@typescript-eslint/no-use-before-define": "off"
      }
    }
  ]
}
